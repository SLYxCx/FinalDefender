@using FinalDefender.Components.GameSystems
@inject GameState GameState

<div class="game-area">
    <div 
    class="spaceship" 
    style="
            left: @($"{GameState.Player.X}px"); 
            top: @($"{GameState.Player.Y}px");
    ">
    </div>

    @foreach (var invader in GameState.Invaders)
    {
        <div 
        class="invader" 
        style="
                left: @($"{invader.X}px"); 
                top: @($"{invader.Y}px");
        ">
        </div>
    }
    @foreach (var projectile in GameState.player_Projectiles)
    {
        <div 
        class="projectile" 
        style="
                left: @($"{projectile.X}px"); 
                top:  @($"{projectile.Y}px");
        ">
        </div>
        <div tabindex="0" @onkeydown="HandleKeyPress"></div>
    }
</div>

@code {
    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "ArrowLeft") GameState.Player.MoveLeft();
        if (e.Key == "ArrowRight") GameState.Player.MoveRight();
        if (e.Key == "Space")
        {
            GameState.player_Projectiles.Add(GameState.Player.Fire());
        }
    }
}


